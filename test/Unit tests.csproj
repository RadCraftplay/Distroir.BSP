  <ItemGroup>
    <ProjectReference Include="..\src\Distroir.BSP.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Test resources\emptyfile.bsp">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
